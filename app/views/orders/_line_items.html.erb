<div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
    <% @line_items.each do |item| %>
      <%= render 'line_item', item: item.product, product: Product.find(item.product_id), quantity: item.quantity %>
    <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="4">
          TOTAL:
        </th>
        <th>
          $<%= total %>
        </th>
      </tr>
    </tfoot>
  </table>
</div>